if ARCH_VERSATILEPB
menu "AUTOSAR MCAL&CDD for arch versatilepb"

config PCI
	bool "PCI driver"
	default y
	select CLIB_ASHEAP

config CAN
	bool "MCAL CAN driver"
	depends on PCI
	default y

config FATFS_DRV
	bool "FATFS diskio driver"
	depends on PCI
	default y

config LWEXT4_DRV
	bool "LWEXT4 blockdev driver"
	depends on PCI
	default y

config EEP
	bool "MCAL EEP driver"
	depends on (FATFS || LWEXT4)
	default y

config FLS
	bool "MCAL FLS driver"
	depends on (FATFS || LWEXT4)
	default y

config LCD
	bool "LCD driver"
	default y

config MCU
	bool "MCAL MCU driver"
	default y

choice
	prompt "ethernet driver"
	default LWIP_DRV

config LWIP_DRV
	bool "LWIP driver"
	depends on PCI

config UIP_DRV
	bool "micro IP driver from contiki"
	depends on PCI

config NO_ETH_DRV
	   bool "disabled"

endchoice

endmenu
endif
