	name     = 'sgwWatchBackground'	
	type     = 'SgBMP{1}' 			
	x        = '0'
	y        = '0'
	w        = '320'	
	h        = '480'
	layer    = '0'
	refresh  = 'NULL'
	cache    = 'NULL'
	weight   = '500'
	>
	<SgBMP 
		name   = 'WatchBackground' 
		locate = 'watch/watch_bg.png' 
		x      = '160' 				
		y      = '160'  					
		/>
</SgWidget>

